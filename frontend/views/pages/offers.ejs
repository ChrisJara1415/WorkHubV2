<!DOCTYPE html>
<html lang="es">
<%- include('../layouts/head') %>

    <body class="bk-angel-blank">
        <%- include('../layouts/navbar') %>
            <main class="container py-4">
                <!-- Hero Search -->
                <section class="py-5" style="background:linear-gradient(180deg,#eef4fb, #ffffff);">
                    <div class="container">
                        <div class="text-center mb-4">
                            <h1 class="fw-bold wh-title">Encuentra tu próximo trabajo</h1>
                            <p class="text-muted">Explora cientos de ofertas en mantenimiento, limpieza
                                y servicios auxiliares</p>
                        </div>
                        <div class="d-flex gap-2 mx-auto" style="max-width:820px;">
                            <div class="input-group input-group-lg shadow-sm">
                                <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
                                <input id="searchInput" type="text" class="form-control border-0"
                                    placeholder="Buscar por título, categoría o ubicación" />
                            </div>
                            <button id="btnSearch" type="button"
                                class="btn btn-warning btn-lg fw-semibold">Buscar</button>
                        </div>
                    </div>
                </section>

                <!-- Categorías populares -->
                <section class="py-5" style="background:#f3f7fb;">
                    <div class="container">
                        <h2 class="h4 text-center mb-4">Categorías Populares</h2>
                        <div id="categoriesGrid" class="row">
                            <% categorias.forEach(cate=> { %>
                                <div class="col-6 col-md-4 col-lg-2">
                                    <button class="w-100 btn btn-light py-3 shadow-sm category-btn" type="button"
                                        data-category="<%= cate.name %>">
                                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                                            style="width:42px;height:42px;background:#eef4fb;">
                                            <i class="bi <%= cate.icon %>"></i>
                                        </div>
                                        <div class="fw-semibold">
                                            <%= cate.name %>
                                        </div>
                                    </button>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </section>

                <!-- Ofertas disponibles -->
                <section class="py-4" style="background:#f8fafc;">
                    <div class="container">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="m-0">Ofertas Disponibles</h3>
                            <div class="d-flex align-items-center gap-2">
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                        id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-funnel"></i> Filtrar
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                                        <li class="dropdown-header">Categoría</li>
                                        <li><a class="dropdown-item" data-category="Todas" href="#">Todas</a>
                                        </li>
                                        <li><a class="dropdown-item" data-category="Jardinería" href="#">Jardinería</a>
                                        </li>
                                        <li><a class="dropdown-item" data-category="Limpieza" href="#">Limpieza</a></li>
                                        <li><a class="dropdown-item" data-category="Piscinero" href="#">Piscinero</a>
                                        </li>
                                        <li><a class="dropdown-item" data-category="Carpintería"
                                                href="#">Carpintería</a></li>
                                        <li><a class="dropdown-item" data-category="Mantenimiento"
                                                href="#">Mantenimiento</a></li>
                                        <li><a class="dropdown-item" data-category="Plomería" href="#">Plomería</a></li>
                                        <li>
                                            <hr class="dropdown-divider" />
                                        </li>
                                        <li class="dropdown-header">Ordenar por</li>
                                        <li><a class="dropdown-item" data-sort="recientes" href="#">Más
                                                recientes</a></li>
                                        <li><a class="dropdown-item" data-sort="antiguos" href="#">Más
                                                antiguos</a></li>
                                    </ul>
                                </div>
                                <div class="btn-group" role="group" aria-label="Vista">
                                    <button class="btn btn-outline-secondary active" id="gridViewBtn" title="Cuadrícula"
                                        type="button"><i class="bi bi-grid-3x3-gap"></i></button>
                                    <button class="btn btn-outline-secondary" id="listViewBtn" title="Lista"
                                        type="button"><i class="bi bi-list-ul"></i></button>
                                </div>
                            </div>
                        </div>

                        <div id="offers" class="row g-3" aria-live="polite">
                            <% if (offers && offers.length) { %>
                                <% offers.forEach(function(off) { %>
                                    <% 
                                        const img=(Array.isArray(off.imagenes) && off.imagenes.length> 0)
                                            ? off.imagenes[0]
                                            : '/img/oficios/jardin.jpg';
                                        const empleador = (off.empleador && off.empleador.nombre) ? off.empleador.nombre
                                        : 'Empleador';
                                    %>
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card h-100 shadow-sm">
                                                <div class="w-100">
                                                    <img src="<%= img %>" class="card-img-fixed"
                                                        alt="<%= off.nombreServicio %>">
                                                </div>
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h5 class="card-title mb-0">
                                                            <%= off.nombreServicio %>
                                                        </h5>
                                                        <span class="badge text-bg-light border">
                                                            <%= off.categoria %>
                                                        </span>
                                                    </div>
                                                    <div class="d-flex align-items-center gap-2 text-muted small mb-2">
                                                        <i class="bi bi-person-circle"></i>
                                                        <span>
                                                            <%= empleador %>
                                                        </span>
                                                    </div>
                                                    <div class="d-flex flex-wrap gap-3 small text-muted mb-2">
                                                        <span><i class="bi bi-geo-alt"></i>
                                                            <%= off.municipio?.nombre || '—' %>
                                                        </span>
                                                        <span><i class="bi bi-cash"></i>
                                                            <%= (off.precioReferencia !=null) ? off.precioReferencia
                                                                : '-' %>
                                                        </span>
                                                        <span><i class="bi bi-calendar-event"></i> Hasta: <%=
                                                                off.fechaLimite ?? '-' %></span>
                                                    </div>
                                                    <p class="mb-3 text-truncate"
                                                        style="-webkit-line-clamp:2; display:-webkit-box; -webkit-box-orient:vertical;">
                                                        <%= off.descripcion %>
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted">Publicado: <%= off.fechaCreacion
                                                                ?? '-' %>
                                                        </small>
                                                        <button class="btn btn-warning" type="button" data-offer-id="<%= off._id %>">Ver
                                                            detalles</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                            <% } else { %>
                                                <div class="col-12">
                                                    <p class="text-muted text-center my-4">No hay ofertas disponibles.
                                                    </p>
                                                </div>
                                                <% } %>
                        </div>
                    </div>
                </section>

            </main>

            <!-- Modal de detalles de oferta -->
            <div class="modal fade" id="jobDetailsModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="jobDetailsModalLabel">Detalles de la Oferta</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" id="jobDetailsBody"></div>
                        <div class="modal-footer">
                            <button type="button" id="closeDetailsBtn" class="btn btn-secondary"
                                data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" id="applyBtn" class="btn btn-warning">Postularme</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Toasts -->
            <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
                crossorigin="anonymous"></script>
    </body>

</html>